{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "compile",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": {
        "owner": "webpack",
        "pattern": {
          "regexp": "^ERROR in (.+)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^asset",
          "endsPattern": "^webpack .+ compiled"
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    }
  ]
}
